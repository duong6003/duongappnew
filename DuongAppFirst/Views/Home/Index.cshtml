<!-- Start Product Area -->
<section class="ftr__product__area ptb--100">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section__title--2 text-center">
                    <h2 class="title__line">Best Seller</h2>
                    <p>You may be interested</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="product__wrap clearfix">
                <!-- Start Single Category -->
                @foreach (var bestSell in Model.TopSellProducts)
                {
                    var url = "/" + bestSell.SeoAlias + "-p." + bestSell.Id + ".html";
                    <div class="col-md-4 col-lg-3 col-sm-4 col-xs-12">
                        <div class="category">
                            <div class="ht__cat__thumb">
                                <a href="@url">
                                    <img src="@bestSell.Image" alt="@bestSell.Name" onerror="this.src ='/client-side/images/product/1.jpg';this.onerror=null;">
                                </a>
                            </div>
                            <div class="fr__hover__info">
                                <ul class="product__action">
                                <li>
                                    <button class="btnAddToWishList" data-id="@bestSell.Id" type="button"><i class="icon-heart icons"></i></button>
                                </li>
                                </ul>
                            </div>
                            <div class="fr__product__inner">
                                <h4><a href="product-details.html">@bestSell.Name</a></h4>
                                <ul class="fr__pro__prize">
                                    <li class="old__prize">@bestSell.OriginalPrice.ToString("N0")</li>
                                    <li>@bestSell.Price.ToString("N0")</li>
                                </ul>
                            </div>
                        </div>
                    </div>

                }
                <!-- End Single Category -->
            </div>
        </div>
    </div>
</section>
<!-- End Product Area -->

@if (Model.TopFeedbacks.Count > 0)
{
    <!-- Start Testimonial Area -->
    <section class="htc__testimonial__area bg__cat--4">
        <div class="container">
            <div class="row">
                <div class="ht__testimonial__activation clearfix">
                    @foreach (var feedback in Model.TopFeedbacks)
                    {
                        <!-- Start Single Testimonial -->
                        <div class="col-lg-6 col-md-6 single__tes">
                            <div class="testimonial">
                                <div class="testimonial__thumb">
                                    <img src="@feedback.Avatar" alt="" onerror="this.src = 'client-side/images/test/client/1.png'; this.onerror = null;">
                                </div>
                                <div class="testimonial__details">
                                    <h4><a href="#">@feedback.Name</a></h4>
                                    <p>@feedback.Message</p>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Testimonial -->
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- End Testimonial Area -->
}

<!-- Start Top Rated Area -->
<section class="top__rated__area bg__white pt--100 pb--110">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section__title--2 text-center">
                    <h2 class="title__line">Top Rated</h2>
                    <p>But I must explain to you</p>
                </div>
            </div>
        </div>
        <div class="row mt--20">
            <!-- Start Product -->
            @foreach (var top in Model.TopRateProducts)
            {
                var url = "/" + top.SeoAlias + "-p." + top.Id + ".html";
                <div class="col-lg-4 col-md-6 col-sm-6 col-xs-12">
                    <div class="htc__best__product">
                        <div class="htc__best__pro__thumb">
                            <a href="@url">
                                <img src="@top.Image" alt="" onerror="this.src ='/client-side/images/product/1.jpg';this.onerror=null;" />
                            </a>
                        </div>
                        <div class="htc__best__product__details">
                            <h2><a href="product-details.html">@top.Name</a></h2>
                            <ul class="rating">
                                <li><i class="icon-star icons"></i></li>
                                <li><i class="icon-star icons"></i></li>
                                <li><i class="icon-star icons"></i></li>
                                <li ><i class="icon-star icons"></i></li>
                                <li class="old"><i class="icon-star icons"></i></li>
                            </ul>
                            <ul class="top__pro__prize">
                                <li class="old__prize">@top.OriginalPrice.ToString("0")</li>
                                <li>@top.Price.ToString("0")</li>
                            </ul>
                            <div class="best__product__action">
                                <ul class="product__action--dft">
                                    <li>
                                        <button class="btnAddToWishList" data-id="@top.Id" type="button"><i class="icon-heart icons"></i></button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!-- End  Product -->
        </div>
    </div>
</section>
<!-- End Top Rated Area -->
@await Component.InvokeAsync("Brand")

@if (Model.LastestBlogs.Count > 0)
{
    <!-- Start Blog Area -->
    <section class="htc__blog__area bg__white ptb--100">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="section__title--2 text-center">
                        <h2 class="title__line">Our Blog</h2>
                        <p>But I must explain to you how all this mistaken idea</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="ht__blog__wrap clearfix">
                    <!-- Start Single Blog -->
                    @foreach (var blog in Model.LastestBlogs)
                    {
                        <div class="col-md-6 col-lg-4 col-sm-6 col-xs-12">
                            <div class="blog">
                                <div class="blog__thumb">
                                    <a href="blog-details.html">
                                        <img src="@blog.Image" alt="blog images" onerror="this.src ='/client-side/images/blog/blog-img/1.jpg';this.onerror=null;" />
                                    </a>
                                </div>
                                <div class="blog__details">
                                    <div class="bl__date">
                                        <span>@blog.DateModified.ToString("d")</span>
                                    </div>
                                    <h2><a href="blog-details.html">@blog.Name</a></h2>
                                    <p>@blog.Description</p>
                                    <div class="blog__btn">
                                        <a href="blog-details.html">Read More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- End Single Blog -->
                </div>
            </div>
        </div>
    </section>
    <!-- End Blog Area -->
}

