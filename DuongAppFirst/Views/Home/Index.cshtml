@model HomeViewModel
@{
    ViewData["Title"] = Model.Title;
    ViewData["MetaKeyword"] = Model.MetaKeyword;
    ViewData["MetaDescription"] = Model.MetaDescription;
}
<!-- Start Slider Area -->
<div class="slider__container slider--one bg__cat--3">
    <div class="slide__container slider__activation__wrap owl-carousel">

        @foreach (var slide in Model.HomeSlides)
        {
            <!-- Start Single Slide -->
            <div class="single__slide animation__style01 slider__fixed--height">
                <div class="container">
                    <div class="row align-items__center">
                        <div class="col-md-7 col-sm-7 col-xs-12 col-lg-6">
                            <div class="slide">
                                <div class="slider__inner">
                                    <h2>Collection @DateTime.Now.Year.ToString()</h2>
                                    <h1>@slide.Name</h1>
                                    <div class="cr__btn">
                                        <a href="cart.html">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-5 col-xs-12 col-md-5">
                            <div class="slide__thumb">
                                <img src="@slide.Image" alt="slider images" onerror="this.src ='/client-side/images/slider/fornt-img/1.png';this.onerror=null;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Single Slide -->
        }
    </div>
</div>
<!-- Start Slider Area -->
<!-- Start Product Area -->
<section class="htc__category__area ptb--100">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="section__title--2 text-center">
                    <h2 class="title__line">New Arrivals</h2>
                    <p>But I must explain to you how all this mistaken idea</p>
                </div>
            </div>
        </div>
        <div class="htc__product__container">
            <div class="row">
                <div class="product__list clearfix mt--30">
                    <!-- Start Single Product -->
                    @foreach (var product in Model.Products)
                    {
                        var url = "/" + product.SeoAlias + "-p." + product.Id + ".html";
                        <div class="col-md-4 col-lg-3 col-sm-4 col-xs-12">
                            <div class="category">
                                <div class="ht__cat__thumb">
                                    <a href="@url">
                                        <img src="@product.Image" alt="" onerror="this.src ='/client-side/images/product/1.jpg';this.onerror=null;">
                                    </a>
                                </div>
                                <div class="fr__hover__info">
                                    <ul class="product__action">
                                        <li><button class="btnAddToWishList" data-id="@product.Id" type="button"><i class="icon-heart icons"></i></button></li>
                                    </ul>
                                </div>
                                <div class="fr__product__inner">
                                    <h4><a href="product-details.html">@product.Name</a></h4>
                                    <ul class="fr__pro__prize">
                                        <li class="old__prize">@product.OriginalPrice.ToString("0")</li>
                                        <li>@product.Price.ToString("0")</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                    <!-- End Single Product -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Product Area -->
