 @inject IViewLocalizer Localizer 
    <!-- Start Header Style -->
<header id="htc__header" class="htc__header__area header--one">
    <!-- Start Mainmenu Area -->
    <div id="sticky-header-with-topbar" class="mainmenu__wrap sticky__header">
        <div class="container">
            <div class="row">
                <div class="menumenu__container clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-3 col-xs-5">
                        <div class="logo">
                            <a href="/"><img src="~/client-side/images/logo/4.png" alt="logo images"></a>
                        </div>
                    </div>
                    <div class="col-md-7 col-lg-8 col-sm-5 col-xs-3">
                        <!--MainMenu-->
                        @await Component.InvokeAsync("MainMenu")
                        <!--End mainMenu-->
                        <!--Mobilemenu-->
                        @await Component.InvokeAsync("MobileMenu")
                        <!--End mobilemenu-->
                    </div>
                    <div class="col-md-3 col-lg-2 col-sm-4 col-xs-4">
                        <div class="header__right">
                            <div class="header__search search search__open">
                                <a href="#"><i class="icon-magnifier icons"></i></a>
                            </div>
                            <div class="header__account">
                                <a class="header__account-icon" href="#"><i class="icon-user icons"></i></a>
                                <div class="header__account-user">
                                    <ul class="header__account-user-menu">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li class="header__item-user-item">
                                                <a href="/account.html">@Localizer["Account"]</a>
                                            </li>
                                            <li class="header__item-user-item">
                                                <a href="/wishlist.html">@Localizer["Wishlist"]</a>
                                            </li>
                                            <li class="header__item-user-item">
                                                <a href="/orders-list.html">@Localizer["OrderTracking"]</a>
                                            </li>
                                            <li class="header__item-user-item">
                                                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                                                    <a href="#" onclick="document.getElementById('logoutForm').submit()"><span>@Localizer["Logout"]</span></a>
                                                </form>
                                            </li>
 }
                                        else
                                        {
                                            <li class="header__item-user-item">
                                                <a href="/register.html">@Localizer["Register"]</a>
                                            </li>
                                            <li class="header__item-user-item">
                                                <a href="/login.html">@Localizer["Login"]</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                            <div id="headerCart">
                                <vc:header-cart></vc:header-cart>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="mobile-menu-area"></div>
        </div>
    </div>
    <!-- End Mainmenu Area -->
</header>
<!-- End Header Area -->
<div class="offset__wrapper">
    <!-- Start Search Popap -->
    <div class="search__area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="search__inner">
                        <form action="/search.html" method="get">
                            <input placeholder="Search here... " type="text" name="keyword">
                            <button type="submit"></button>
                        </form>
                        <div class="search__close__btn">
                            <span class="search__close__btn_icon"><i class="zmdi zmdi-close"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
